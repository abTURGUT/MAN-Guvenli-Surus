<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bireysel_background"
    tools:context=".LoginScreen.LoginScreenMain">


    <Button
        android:id="@+id/lsbc2_errorMessageTXT"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="67dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="67dp"
        android:background="#B3CF2929"
        android:fontFamily="sans-serif-light"
        android:text="-"
        android:textAlignment="center"
        android:textColor="#DAD4D4"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lsbc2_passwordET" />

    <Button
        android:id="@+id/lsbc2_invitorET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="#80FFFFFF"
        android:fontFamily="sans-serif-light"
        android:text="-"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#66000000"
        android:fontFamily="sans-serif-light"
        android:text="LÜTFEN DİĞER KİŞİSEL BİLGİLERİNİZİ GİRİNİZ"
        android:textColor="#DAD4D4"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lsbc2_invitorET" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="#B3000000"
        android:fontFamily="sans-serif-light"
        android:text="BİREYSEL KAYIT EKRANI"
        android:textColor="#DAD4D4"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/lsbc2_nameET"
        android:layout_width="277dp"
        android:layout_height="41dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:background="#F0E8E8"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:hint="İsim"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <EditText
        android:id="@+id/lsbc2_surnameET"
        android:layout_width="277dp"
        android:layout_height="41dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:background="#F0E8E8"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:hint="Soyisim"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lsbc2_nameET" />

    <EditText
        android:id="@+id/lsbc2_phoneET"
        android:layout_width="277dp"
        android:layout_height="41dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:background="#F0E8E8"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:hint="Telefon Numrası"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lsbc2_surnameET" />

    <EditText
        android:id="@+id/lsbc2_passwordET"
        android:layout_width="277dp"
        android:layout_height="41dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:background="#F0E8E8"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:hint="Şifre"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lsbc2_phoneET" />

    <Button
        android:id="@+id/lsbc2_confirmBTN"
        android:layout_width="289dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="sans-serif-medium"
        android:text="ONAYLA"
        android:textColor="#f0e8e8"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lsbc2_errorMessageTXT" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="137dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="136dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Davet eden kişi"
        android:textColor="#b13e42"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

</androidx.constraintlayout.widget.ConstraintLayout>